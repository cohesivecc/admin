<% content_for(:hero_panel) do %>
  <%= link_to([:new, ActiveModel::Naming.singular_route_key(@klass)], class: 'waves-effect waves-light btn-floating blue') do %>
    <i class="material-icons">add</i>
  <% end %>
  <%= link_to([:sort, @klass], class: 'waves-effect waves-light btn-floating red') do %>
    <i class="material-icons">swap_vert</i>
  <% end if @klass.admin_sortable? %>
<% end %>

<%= render 'cohesive_admin/filters/form' %>
<%= render 'cohesive_admin/search/form' %>

<div class="card-panel">
  <table class="bordered highlight">
    <thead>
      <tr>
        <th><%= @klass.display_name_method.to_s.humanize.titleize %></th>
      </tr>
    </thead>

    <tbody>
    <% if @items.empty? %>
      <tr>
        <td class="center-align">
          <%= "No #{@header} Found." %>
        </td>
      </tr>
    <% else %>
      <% @items.each do |i| %>
        <tr>
          <td>
            <%= link_to([:clone, i], class: 'secondary-content') do %>
              <i class="material-icons tooltipped" data-position="left" data-delay="500" data-tooltip="Duplicate">library_add</i>
            <% end if @klass.admin_duplicatable? %>
            <%= link_to(i.to_label, [:edit, i], class: "tooltipped", "data-delay" => "500", "data-position" => "left", "data-tooltip" => "Click to Edit") %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>


<%= paginate(@items, views_prefix: 'cohesive_admin', theme: 'materialize') %>
