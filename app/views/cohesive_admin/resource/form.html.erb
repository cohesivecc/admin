<%= simple_form_for(@object, url:@dashboard.path([:admin, @object]), include_id: true, html: { multipart: true, id: 'object-form' }) do |f| %>
	<div class="card-panel">
    <%= hidden_field_tag(:duplicate_of, @object.id) %>
		<%= render(partial: 'fields', locals: { klass:@model, f: f }) %>
	</div>
  <div class="row">
    <div class="col s12">
			<button type="submit" class="waves-effect waves-light btn" data-disable-with="Saving...">Save</button>
			<%= link_to('Delete', @dashboard.path([:admin,@object]), method: 'delete', class: "waves-effect waves-light btn red", data: { confirm: "Are you sure you want to delete this?", disable_with: 'Deleting...' }) unless @object.new_record? %>
			<%= link_to('Cancel', @dashboard.path([:admin,@model]), class: 'waves-effect waves-grey btn-flat') -%>
		</div>
	</div>
<% end %>
