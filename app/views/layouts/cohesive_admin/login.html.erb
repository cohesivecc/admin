  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Cohesive Admin // Content Management System</title>

    <%= stylesheet_link_tag 'cohesive_admin/application', 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css', '//fonts.googleapis.com/icon?family=Material+Icons', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'cohesive_admin/application', 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class="container center-align">
      <div class="row">
        <div class="col s4 offset-s4">
          <h1><i class="co-icon-logo-byline"></i></h1>
          <h5>Content Management System</h5>

          <%= render partial: '/cohesive_admin/shared/flash_message' %>
          <div class="card grey lighten-5">
            <div class="card-content">
    					<%= yield %>
            </div>
          </div>

    			<footer>
    				Happily engineered just for you by your friends at <br /><a href="http://www.cohesive.cc" target="_blank"><i class="co-icon-logo"></i></a>
    			</footer>
        </div>
      </div>
    </div>

	</body>

</html>
