const Cls = (window.CohesiveAdmin = class CohesiveAdmin {
  static initClass() {
    this.config       = null;
    this.initialized  = false;
  }

  static initialize() {
    // NEAL: this feels a bit hacky - on login screen, the AJAX call below causes CSRF validation to fail, so we simply skip this step on that page.
    if (!$('body#login').length) {
      if(CohesiveAdmin.initialized) {
        return $(document).trigger('cohesive_admin.initialized');
      } else {
        // side navigation
        $(".button-collapse").sidenav();

        $.ajax({
          url: "<%= CohesiveAdmin::Engine.routes.url_helpers.config_path(format: :json) %>",
          dataType: 'json',
        }).done( data => CohesiveAdmin.configure(data));
        // help/hints on form inputs
        return $(document).off('click', '[data-toggle-help]').on('click', '[data-toggle-help]', function() {
          return $(this).siblings('.help-block').toggle();
        });
      }
    }
  }

  static configure(config) {
    // listen for dynamic changes to the form
    this.config = config;
    $(document).on('cohesive_admin.form_change', () => CohesiveAdmin.refreshForm());
    $(document).on('cohesive_admin.initialized', () => CohesiveAdmin.refreshForm());
    CohesiveAdmin.initialized = true;
    // publish initialize event
    return $(document).trigger('cohesive_admin.initialized');
  }

  static refreshForm() {
    if($('#object-form, #search-form').length) {
      $('#object-form select, #search-form select').formSelect();
      $('.collapsible').collapsible();
      M.updateTextFields();
      new FroalaEditor('#object-form textarea.wysiwyg');
      // $('#object-form textarea.wysiwyg').froalaEditor()
      return $('#object-form .tooltipped, #search-form .tooltipped').tooltip();
    }
  }
});
Cls.initClass();
